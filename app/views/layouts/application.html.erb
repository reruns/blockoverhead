<!DOCTYPE html>
<html>
<head>
  <title>BlockOverhead</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav id='user' class='group'>
    <% if signed_in? %>
      <a href='<%= user_url(current_user) %>'><%= current_user.username %></a>
      <%= button_to "Sign Out", session_url, :method => :delete %>
    <% else %>
      <a href="<%= new_session_url %>">Sign In</a>
      <a href="<%= new_user_url %>">Sign Up</a>
    <% end %>
  </nav>
  <nav id='link-bar' class='group'>
    <a href='/#/questions'>Questions</a>
    <a href='/#/tags'>Tags</a>
    <a href='/#/users'>Users</a>
    <a href='/#/unanswered'>Unanswered</a>
    <a href='/#/ask'>Ask</a>
  </nav>

<%= yield %>

</body>
</html>
