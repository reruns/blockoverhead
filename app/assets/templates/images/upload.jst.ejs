<div id='up-title' class='group'>
  <h2>Add Image</h2>
  <a id='close'>x</a>
</div>
<form id='image-form'>
  <div class='form-data group'>
    <div id='type-select'>
      <label><input type="radio" name="location" value="loc" checked>From my computer</label>
      <label><input type="radio" name="location" value="url">From the web</label>
    </div>
    <div id='local-up'>
      <input type="file" name="image[img]" id="input-image">
    </div>
    <div id='url-up' class='hidden'>
      <input type="text" name="image[img_url]" value="" id='image-url'>
    </div>
  </div>
  <img src="" width="50" id="preview-image">
  <button id='submit-img' class='local'>Add picture</button>
</form>
