<h1 id='question-title'><%= question.get('title') %></h1>
<strong>
  <%= question.get('view_count') %> views
</strong>

<br><br>

<div class='likes'></div>

<div id='question-data'>
  <pre id='question-body'>
    <% if (question.get('body')) { %>
    <%= Markdown.getSanitizingConverter().makeHtml(question.get('body')) %>
    <% } %>
  </pre>
  <label>
    <strong>Tags:</strong>
    <div id='tags'></div>
  </label>
  <% if (question.author().id === BlockOverhead.currentUser.id) { %>
    <button class='edit'>Edit</button>
  <% } %>
</div>

<div class='posted-by'></div>

<section class='comments'></section>

<section id='answers'></section>

<div id='new-answer'></div>
